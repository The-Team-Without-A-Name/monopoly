<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="anchorPane" minHeight="306.0" minWidth="348.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
   <children>
              <Label layoutX="30.0" layoutY="14.0" text="You have landed on a Property!" textFill="#3f0808">
                 <font>
                    <Font name="System Bold" size="18.0" />
                 </font>
              </Label>

   <GridPane layoutX="30" layoutY="34">
        <children>

              <Label text="You have landed on: " GridPane.columnIndex="0" GridPane.rowIndex="0">
                 <font>
                    <Font size="14.0" />
                 </font>
              </Label>
                  <Label fx:id="nameOfProperty" GridPane.columnIndex="1" GridPane.rowIndex="0">
                           <font>
                                <Font name="System Bold" size="14.0" />
                           </font>
                  </Label>

                   <Label text="This property is owned by:      " GridPane.columnIndex="0" GridPane.rowIndex="1">
                      <font>
                         <Font size="14.0" />
                      </font>
                   </Label>

                  <Label fx:id="propertyOwnership" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                                    </Label>

                   <Label text="Price: " GridPane.columnIndex="0" GridPane.rowIndex="2">
                      <font>
                         <Font size="14.0" />
                      </font>
                   </Label>

                  <Label fx:id="price" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                                    </Label>
                   <Label text="Rent: " GridPane.columnIndex="0" GridPane.rowIndex="3">
                      <font>
                         <Font size="14.0" />
                      </font>
                   </Label>

                   <Label text="Would you like to buy this space?" GridPane.columnIndex="0" GridPane.rowIndex="4">
                      <font>
                         <Font size="14.0" />
                      </font>
                   </Label>

                  <Label fx:id="rent" GridPane.columnIndex="1" GridPane.rowIndex="3">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                                    </Label>

                  <Button fx:id="buy" layoutX="50" layoutY="20" onAction="#handleBuyProperty" text="Buy" GridPane.columnIndex="0" GridPane.rowIndex="5">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>

                  <Button fx:id="dontBuy" layoutX="50" layoutY="50" onAction="#handleDontBuy" text="Don't Buy" GridPane.columnIndex="1" GridPane.rowIndex="5">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
        </children>

   </GridPane>




   </children>
</AnchorPane>
